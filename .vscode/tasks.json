{
    "version": "0.1.0",
    "isShellCommand": true,
    "showOutput": "always",
    "windows":{
        "command": "cmd",
        "args": ["/C"],
        "suppressTaskName": true,
        "tasks": [
            {
                "taskName": "Build",
                "isBuildCommand": true,
                "args": [
                    "mkdir Build",
                    "& robocopy Dependencies C:/MinGW /E", 
                    "& robocopy Dependencies/bin Build", 
                    "& g++ -std=c++11 main.cpp -lopengl32 -lglew32 -lglew32mx -lglu32 -lmingw32 -lSDL2main -lSDL2 -lSDL2_ttf -lSDL2_image -o Build/build"
                ]
            }
        ]
    },
    "linux": {  //Linux Task Configuration
        "command": "sh",
        "args": ["-c"],
        "suppressTaskName": true,
        "tasks": [
            {
                "taskName": "Build",
                "isBackground": true,
                "args": [
                    "mkdir linux_build",
                    "& g++ -std=c++11 main.cpp -o build `sdl2-config --cflags --libs`"
                ]
            }
        ]
    }
}